{
    "name": "snipify-dev/laravel-captcha",
    "version": "1.0.2",
    "description": "A comprehensive Laravel package for integrating Google reCAPTCHA v2 and v3 with support for standard forms and Livewire components",
    "keywords": [
        "laravel",
        "captcha",
        "recaptcha",
        "livewire",
        "security",
        "validation"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Shahnawaz Jahania",
            "email": "shanijahania@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^8.0|^9.0|^10.0|^11.0|^12.0",
        "illuminate/validation": "^8.0|^9.0|^10.0|^11.0|^12.0",
        "illuminate/http": "^8.0|^9.0|^10.0|^11.0|^12.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0|^7.0|^8.0|^9.0",
        "phpunit/phpunit": "^9.0|^10.0|^11.0",
        "mockery/mockery": "^1.4",
        "laravel/livewire": "^2.0|^3.0"
    },
    "suggest": {
        "laravel/livewire": "Required for Livewire component integration (^2.0|^3.0)"
    },
    "autoload": {
        "psr-4": {
            "SnipifyDev\\LaravelCaptcha\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SnipifyDev\\LaravelCaptcha\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "SnipifyDev\\LaravelCaptcha\\CaptchaServiceProvider"
            ],
            "aliases": {
                "Recaptcha": "SnipifyDev\\LaravelCaptcha\\Facades\\Recaptcha"
            }
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    }
}